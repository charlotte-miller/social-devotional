<%= form_for @lesson, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :study_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :study_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :position, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :position, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :backlink, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :backlink, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :video_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :video_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :audio_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :audio_url, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lessons_path, :class => 'btn' %>
  </div>
<% end %>

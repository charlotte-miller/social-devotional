.page-header
  %h1= t '.title', :default => 'Lessons'
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Study
      %th Position
      %th Title
      %th Description
      %th Backlink
      %th Video
      %th Audio
      %th Created At
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @lessons.each do |lesson|
      %tr.lesson
        %td= link_to lesson.id, admin_lesson_path(lesson)
        %td= lesson.study_id
        %td= lesson.position
        %td= lesson.title
        %td= lesson.description
        %td= lesson.backlink
        %td= link_to lesson.video.original_filename, lesson.video.url
        %td= link_to lesson.audio.original_filename, lesson.audio.url
        %td= l lesson.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), |
            edit_admin_lesson_path(lesson), :class => 'btn btn-mini' |
          -#
          = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
            admin_lesson_path(lesson),                                                                                   |
            :method => :delete,                                                                                          |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-mini btn-danger'                                                                          |
= link_to t('.new', :default => t("helpers.links.new")), new_admin_lesson_path, :class => 'btn btn-primary'

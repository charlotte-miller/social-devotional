%h1 Listing answers
%table
  %tr
    %th Question
    %th Author
    %th Text
    %th Blocked count
    %th Stared count
    %th
    %th
    %th
  - @answers.each do |answer|
    %tr
      %td= answer.question.text
      %td= answer.author.first_name
      %td= answer.text
      %td= answer.blocked_count
      %td= answer.stared_count
      %td= link_to 'Show', answer
      %td= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' }
%br/

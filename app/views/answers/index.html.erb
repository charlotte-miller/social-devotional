<h1>Listing answers</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Author</th>
    <th>Text</th>
    <th>Blocked count</th>
    <th>Stared count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.question.text %></td>
    <td><%= answer.author.first_name %></td>
    <td><%= answer.text %></td>
    <td><%= answer.blocked_count %></td>
    <td><%= answer.stared_count %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


= form_for(@answer) do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2
        = pluralize(@answer.errors.count, "error")
        prohibited this answer from being saved:
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :text
    %br/
    = f.text_area :text
  .actions
    = link_to 'Nevermind', '#'
    = f.submit 'Post Answer'

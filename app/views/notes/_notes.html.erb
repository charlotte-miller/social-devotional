<div id="lesson_notes">
  <h3>
    Notes: 
    <small><%= @lesson.title %></small>
    <form id="public_notes_opt_in" class="form-inline pull-right" role="form">
        <label class="checkbox">
          <input type="checkbox" id="public_notes" value="false"> Share Notes w/ Everybody
        </label>
    </form>
  </h3>
  
  
  <div class="form-group">
    <textarea class="form-control span12" id="notes_textarea" name="notes_textarea" rows="9" placeholder="Take Notes from the Lesson"></textarea>
    <div id="question_buttons" class="pull-right form-control hide">
      <a href="#">Clear -</a>
      <button type="submit" class="btn btn-default ">
        Save
      </button>
    </div>
    <div class="clearfix"></div>
  </div>
  
  
</div>
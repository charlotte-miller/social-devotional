<%= (render partial: 'sidebar')  %>

<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:source_id) %></th>
      <th><%= model_class.human_attribute_name(:source_type) %></th>
      <th><%= model_class.human_attribute_name(:text) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.id, polymorphic_questions_path(question) %></td>
        <td><%= question.user_id %></td>
        <td><%= question.source_id %></td>
        <td><%= question.source_type %></td>
        <td><%= question.text %></td>
        <td><%=l question.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            polymorphic_questions_path('new'),
            :class => 'btn btn-primary',
            :id => 'new_question_button' %>



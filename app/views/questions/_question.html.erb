<li class="quesiton media">
  <h4 class="pull-left media-heading Q_and_A">Q:</h4>
  <div class="media-body">
    <a class="" href="#">
      <article class="question_article">
        <%= question.text %>
      </article>
    </a>
        
    <div class="question_details ">
      <div class="media">
        <h4 class="pull-left media-heading Q_and_A">A:</h4>
        <div class="form-group media-body">
          <textarea class="form-control span11" id="ask_textarea" name="ask_textarea" placeholder="Answer this Question" rows='2'></textarea>
          <div id="question_buttons" class="pull-right form-control hide">
            <a href="#">Save for Later -</a>
            <button type="submit" class="btn btn-default ">
              Answer
            </button>
          </div>
        </div>
      </div>
      
      <hr />
      
      <!-- Answer Nav -->
      <ul class="answer_nav nav nav-pills">
        <li class="active"><a href="#a_popular"  data-toggle="pill">Popular</a></li>
        <li><a href="#a_recent"   data-toggle="pill">Recent</a></li>
        <li><a href="#a_timeline" data-toggle="pill">Timeline</a></li>
      </ul>

      <!-- Answer Content -->
      <div class="answer_content pill-content">
        <div id="a_popular", class="pill-pane active">
          <ul id="a_popular" class="questions media-list">
            <%#= render( partial: 'questions/question', collection: @q_popular) || "No Popular Questions" %>
            <%- question.answers.each do |answer| -%>
              <!-- Nested media object -->
              <div class="media answer">
                <a class="pull-left" href="#">
                  <img class="media-object img-circle" data-src="holder.js/64x64" alt="64x64" src="data:image/png;base64," style="width: 64px; height: 64px;">
                </a>
                <div class="media-body">
                  <article>
                    <%= answer.text %>
                  </article>
                </div>
              </div>
            <%- end -%>
          </ul>
        </div>

        <div id="a_recent", class="pill-pane">
          <ul id="a_recent" class="questions media-list">
            <%#= render( partial: 'questions/question', collection: @q_recent ) || "No Recent Questions" %>
            <%- question.answers.each do |answer| -%>
              <!-- Nested media object -->
              <div class="media answer">
                <a class="pull-left" href="#">
                  <img class="media-object img-circle" data-src="holder.js/64x64" alt="64x64" src="data:image/png;base64," style="width: 64px; height: 64px;">
                </a>
                <div class="media-body">
                  <article>
                    <%= answer.text %>
                  </article>
                </div>
              </div>
            <%- end -%>
          </ul>
        </div>

        <div id="a_timeline", class="pill-pane">    
          <ul id="a_timeline" class="questions media-list">
            <%#= render( partial: 'questions/question', collection: @q_timeline ) || "No Question Timeline"%>
            <%- question.answers.each do |answer| -%>
              <!-- Nested media object -->
              <div class="media answer">
                <a class="pull-left" href="#">
                  <img class="media-object img-circle" data-src="holder.js/64x64" alt="64x64" src="data:image/png;base64," style="width: 64px; height: 64px;">
                </a>
                <div class="media-body">
                  <article>
                    <%= answer.text %>
                  </article>
                </div>
              </div>
            <%- end -%>
          </ul>
        </div>
      </div>
      

    </div>
  </div>
</li>
%li.quesiton.media
  %h4.pull-left.media-heading.Q_and_A Q:
  .media-body
    %a{:href => "#"}
      %article.question_article
        = question.text
    .question_details
      .media
        %h4.pull-left.media-heading.Q_and_A A:
        .form-group.media-body
          %textarea#ask_textarea.form-control.span11{:name => "ask_textarea", :placeholder => "Answer this Question", :rows => "2"}
          #question_buttons.pull-right.form-control.hide
            %a{:href => "#"} Save for Later -
            %button.btn.btn-default{:type => "submit"}
              Answer
      %hr/
      / Answer Nav
      %ul.answer_nav.nav.nav-pills
        %li.active
          %a{"data-toggle" => "pill", :href => "#a_popular"} Popular
        %li
          %a{"data-toggle" => "pill", :href => "#a_recent"} Recent
        %li
          %a{"data-toggle" => "pill", :href => "#a_timeline"} Timeline
      / Answer Content
      .answer_content.pill-content
        <div id="a_popular", class="pill-pane active">
        %ul#a_popular.questions.media-list
          - question.answers.each do |answer|
            / Nested media object
            .media.answer
              %a.pull-left{:href => "#"}
                %img.media-object.img-circle{:alt => "64x64", "data-src" => "holder.js/64x64", :src => "data:image/png;base64,", :style => "width: 64px; height: 64px;"}/
              .media-body
                %article
                  = answer.text
      <div id="a_recent", class="pill-pane">
      %ul#a_recent.questions.media-list
        - question.answers.each do |answer|
          / Nested media object
          .media.answer
            %a.pull-left{:href => "#"}
              %img.media-object.img-circle{:alt => "64x64", "data-src" => "holder.js/64x64", :src => "data:image/png;base64,", :style => "width: 64px; height: 64px;"}/
            .media-body
              %article
                = answer.text
    <div id="a_timeline", class="pill-pane">
    %ul#a_timeline.questions.media-list
      - question.answers.each do |answer|
        / Nested media object
        .media.answer
          %a.pull-left{:href => "#"}
            %img.media-object.img-circle{:alt => "64x64", "data-src" => "holder.js/64x64", :src => "data:image/png;base64,", :style => "width: 64px; height: 64px;"}/
          .media-body
            %article
              = answer.text

<%- model_class = Study -%>
<div class="page-header">
  <h1 class="offset1">
    <%= @study.title %>
  </h1>
    
  </div>
<div class="row-fluid">
  <video <%= "poster=#{@study.poster_img} id='video-for-#{@study.id}' " %> 
    class="video-js vjs-default-skin span10 offset1" controls preload="auto" data-setup="{}">
    <source src="<%= @study.lessons.first.video.url %>" type='video/mp4'></source>
  </video>
  <ul>
    <%- @study.lessons.each do |lesson| -%>
      <li id="<%= lesson.id %>"><%= lesson.video.url %></li>
    <%- end -%>
  </ul>
</div>
<div class="row-fluid">
  <dl class="dl-horizontal" id="study">
    <dt><strong><%= model_class.human_attribute_name(:slug) %>:</strong></dt>
    <dd><%= @study.slug %></dd>
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @study.description %></dd>
    <dt><strong><%= model_class.human_attribute_name(:ref_link) %>:</strong></dt>
    <dd><%= @study.ref_link %></dd>
  </dl>
  <%# link_to 'Back to All', studies_path, :class => 'btn offset1'  %>
</div>

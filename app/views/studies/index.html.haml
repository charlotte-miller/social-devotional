- content_for :js_includes do
  = javascript_include_tag "library"


.row
  #library-search
    %form{role:'form'}
      #library-search-inputs
        .input-group-btn
          %button{type:'button', data:{toggle:'dropdown'}}
            Search All
            %span.caret
          %ul.dropdown-menu
            %li 
              %a{:href => "#"} Title
            %li 
              %a{:href => "#"} Church
            %li 
              %a{:href => "#"} Keywords
        %input{type:'text', placeholder:'What do you want to learn?'}
      
#library-media
  - random_column_layouts(100).each do |col_array|
    .row
      - col_array.each do |col_count|
        .item{:class=>"col-sm-#{col_count}", style:"background-image:url('http://lorempixel.com/#{('a'..'z').to_a[rand(26)]}/400/200/');" }
          = col_count
      